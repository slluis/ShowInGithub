<?xml version="1.0" encoding="UTF-8"?>
<ExtensionModel>

	<Header>
		<ReleaseNotes>
{{1.0.4, 2017-07-14}}
Added support for Visual Studio for Mac.
{{1.0.2, 2014-06-06}}
Added support for enterprise GitHub setups.
Fixed incorrect line number in some cases.
		</ReleaseNotes>
	</Header>

	<Extension path = "/MonoDevelop/Ide/Commands/VersionControl">
		<Command id = "ShowInGithub.Commands.ShowInGithub"
		         defaultHandler = "ShowInGithub.ShowInGithubCommand"
		         _label = "Show in Github" /> 
		<Command id = "ShowInGithub.Commands.CopyGithubLink"
		         defaultHandler = "ShowInGithub.CopyGithubLinkCommand"
		         _label = "Copy Github Link" /> 
	</Extension>

	<Extension path = "/MonoDevelop/SourceEditor2/ContextMenu/Editor">
		<SeparatorItem />
		<CommandItem id = "ShowInGithub.Commands.ShowInGithub" />
		<CommandItem id = "ShowInGithub.Commands.CopyGithubLink" />
		<SeparatorItem />
	</Extension>

</ExtensionModel>
